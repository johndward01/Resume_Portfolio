@model Resume_Portfolio.Models.JobViewModel
@{
    ViewData["Title"] = "Create New Job";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="InsertJobToDatabase">
    <div class="form-group">
        <label asp-for="Job.Title"></label>
        <input asp-for="Job.Title" class="form-control" />
        <span asp-validation-for="Job.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Job.Location"></label>
        <input asp-for="Job.Location" class="form-control" />
        <span asp-validation-for="Job.Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Job.ExperienceYears"></label>
        <input asp-for="Job.ExperienceYears" class="form-control" />
        <span asp-validation-for="Job.ExperienceYears" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Job.Remote">Remote</label>
        <select asp-for="Job.Remote" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="Job.Remote" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Job.CompanyID">Company</label>
        <select asp-for="Job.CompanyID" class="form-control" asp-items="@(new SelectList(Model.Companies, "CompanyID", "CompanyName"))">
            <option value="">Select a Company</option>
        </select>
        <span asp-validation-for="Job.CompanyID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
